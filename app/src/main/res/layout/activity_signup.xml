<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <TextView
        android:id="@+id/SignUpTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userCIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/download"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SignUpTV"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signUpEmailTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userCIV">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signUpEmailTIET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signUpCrePasswordTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpEmailTIL">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signUpCrePasswordTIET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Create Password"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signUpConPasswordTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpCrePasswordTIL">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signUpConPasswordTIET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confrim Password"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/signUpBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:backgroundTint="#3F51B5"
        android:text="Sign UP"
        app:cornerRadius="5dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpConPasswordTIL" />

    <TextView
        android:id="@+id/alreadyHaveAcTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an Account?."
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="90dp"
        app:layout_constraintTop_toBottomOf="@id/signUpBT"/>


    <TextView
        android:id="@+id/alreadyHaveAcLoginTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login."
        android:textColor="#2196F3"
        app:layout_constraintStart_toEndOf="@id/alreadyHaveAcTV"
        app:layout_constraintTop_toTopOf="@id/alreadyHaveAcTV"/>

</androidx.constraintlayout.widget.ConstraintLayout>